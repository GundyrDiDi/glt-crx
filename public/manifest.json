{
  "manifest_version": 2,
  "name": "KAERUツール(THE直行便)",
  "homepage_url": "https://b2b.theckb.com/",
  "description": "KAERUツール(THE直行便)",
  "default_locale": "ja",
  "permissions": ["storage", "background", "tabs"],
  "icons": {
    "16": "icons/frog.png",
    "48": "icons/frog.png",
    "128": "icons/frog.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://*.1688.com/*",
        "https://*.taobao.com/*",
        "https://*.tmall.com/*",
        "https://*.amazon.co.jp/*",
        "https://*.rakuten.co.jp/*",
        "https://*.aliexpress.com/*",
        "https://*.png/*",
        "https://*.jpg/*",
        "https://*.bmp/*",
        "<all_urls>"
      ],
      "js": ["js/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "THE直行便発注プラグイン",
    "default_icon": {
      "19": "icons/frog.png",
      "38": "icons/frog.png"
    }
  },
  "version": "0.0.0.1"
}
