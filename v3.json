{
  "manifest_version": 3,
  "name": "THE CKB Easybuy",
  "homepage_url": "https://s.theckb.com/",
  "description": "",
  "default_locale": "en",
  "permissions": ["storage", "background"],
  "icons": {
    "16": "icons/frog.png",
    "48": "icons/frog.png",
    "128": "icons/frog.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.1688.com/*",
        "https://*.taobao.com/*",
        "https://*.tmall.com/*",
        "https://*.amazon.co.jp/*",
        "https://*.rakuten.co.jp/*",
        "https://*.aliexpress.com/*",
        "https://*.theckb.com/*",
        "https://*.png/*",
        "https://*.jpg/*",
        "https://*.bmp/*"
      ],
      "css":["css/content-script.0cafa637.css"],
      "js": ["js/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "",
    "default_icon": {
      "19": "icons/frog.png",
      "38": "icons/frog.png"
    }
  },
  "version": "5.2.0"
}
